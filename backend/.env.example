# Copy to .env and fill in values. NEVER commit .env

OPENAI_API_KEY=sk-...
SENDGRID_API_KEY=SG....
FROM_EMAIL=your-verified-sender@domain.com
APP_BASE_URL=https://pillulu-health-assistant.onrender.com
DATABASE_PATH=./data/pillulu.db
CRON_SECRET=your-random-secret-for-cron-endpoints
JWT_SECRET=your-random-secret-for-auth-tokens

# OAuth / OIDC
# Where frontend users should land after OAuth callback.
# Local example: http://localhost:8080
OAUTH_FRONTEND_BASE_URL=
# Optional explicit backend origin for callback URLs.
# Local example: http://127.0.0.1:8000
OAUTH_BACKEND_BASE_URL=

# Google OIDC
GOOGLE_OIDC_DISCOVERY_URL=https://accounts.google.com/.well-known/openid-configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
